[train]
batch_size = 4
type_of_loss = cross_entropy_loss

optimizer = bert_adam
learning_rate = 1e-4

weight_decay = 0.01

gamma = 1
step_size = 10

[model]
name = Bert

bert_path = /data/disk5/private/zhx/bert/chinese
output_dim = 15

[reader]
max_queue_size = 40
train_reader_num = 1
valid_reader_num = 1

[data]
formatter = SFKS_Bert_Subject

train_data_path = /data/disk3/private/zhx/exam/data/origin_data/no
train_file_list = 0_train.json,1_train.json
valid_data_path = /data/disk3/private/zhx/exam/data/origin_data/no
valid_file_list = 0_test.json,1_test.json

max_len = 512

need_word2vec = False

[output]
model_path = /data/disk3/private/zhx/exam/model
model_name = 3
tensorboard_path = /data/disk3/private/zhx/exam/tensorboard
test_time = 1
output_time = 1

accuracy_method = top3
