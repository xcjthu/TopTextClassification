[train]
batch_size = 16
type_of_loss = multi_label_softmax_loss

optimizer = bert_adam
learning_rate = 1e-5

weight_decay = 1e-3

gamma = 1

pre_train = 0

epoch = 64

[model]
name = YSBert

bert_path = /data/disk5/private/zhx/bert/chinese


[reader]
max_queue_size = 40
train_reader_num = 1
valid_reader_num = 1


[data]
formatter = YSBertFormatter

train_data_path = /data/disk5/private/zhx/cail/ys/data/small/divorce
train_file_list = train.json
valid_data_path = /data/disk5/private/zhx/cail/ys/data/small/divorce
valid_file_list = test.json

max_len = 512

need_word2vec = False


[output]
model_path = /data/disk5/private/zhx/cail/ys/model
model_name = divorce_chinese
tensorboard_path = /data/disk5/private/zhx/cail/ys/tensorboard
test_time = 1
output_time = 1